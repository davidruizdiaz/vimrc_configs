    silent! call mkdir($HOME."/.vim")
endif
if !isdirectory($HOME."/.vim/undo_dir")
    silent! call mkdir($HOME."/.vim/undo_dir",)
endif

set undodir=$HOME/.vim/undo_dir//
set undofile


" Configuraci贸n de archivos de swap
